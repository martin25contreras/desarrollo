//********************		CONSULTA PARA EL EVENTO DE INASISTENCIA
SET lc_time_names = 'es_MX';
SELECT DISTINCT a.id_cedula, a.fecha, h.id_dia, e.descripcion, a.acceso, a.id_tipo_asistencia FROM asistencia AS a
INNER JOIN horario AS h ON h.id_docente = a.id_cedula 
INNER JOIN entidad AS e ON e.id = h.id_dia
WHERE DATE_FORMAT(a.fecha, '%d' ) = DAY(NOW()) AND  DATE_FORMAT(now(), '%W' ) = e.descripcion

SET lc_time_names = 'es_MX';
SELECT DISTINCT a.id_cedula, a.fecha, h.id_dia, e.descripcion, a.acceso, a.id_tipo_asistencia FROM asistencia AS a
INNER JOIN horario AS h ON h.id_docente = a.id_cedula 
INNER JOIN entidad AS e ON e.id = h.id_dia
WHERE DATE_FORMAT(a.fecha, '%d' ) = DAY(NOW()) AND DATE_FORMAT(a.fecha, '%m' ) = MONTH(NOW()) AND DATE_FORMAT(now(), '%W' ) = e.descripcion